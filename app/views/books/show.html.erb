<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book: @newbook, user: @user %>
    </div>

  <div class="col-md-8 offset-md-1">
  <h1>Book detail</h1>

  <table class="table">
    <tread>
      <th>
        <th style="width: 20%">
        <%= link_to user_path(@user.id) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %>
        <% end %>
        <br>
        <%= link_to user_path(@user.id) do %>
          <%= @book.user.name %>
        <% end %>
        </th>
        <th style="width: 30%">
        <%= link_to book_path(@book.id) do %>
          <%= @book.title %>
        <% end %>
        </th>
        <th style="width: 30%"><%= @book.body %></th>
        <th style="width: 10%">
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
        <% end %>
        </th>
        <th style="width: 10%">
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
        </th>
      </th>
    </tread>
  </table>
  </div>
</div>
