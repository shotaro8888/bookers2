      <div class="row"><h3>User info</h3></div>
        <th style="width: 40%"><%= image_tag user.get_profile_image(100,100) %></th>
        <table class="table">
            <tr>
              <th style="width: 30%">name</th>
              <td><%= user.name %></td>
            </tr>
            <tr>
              <th style="width: 30%">introduction</th>
              <td><%= user.introduction %></td>
            </tr>
          <tbody>
        </table>
        <br>
        <p class="text-center">
          <%= link_to edit_user_path(user) do %>
            <button type="button" class="btn btn-outline-secondary w-100"><i class="fas fa-user-cog"></i></button>
          <% end %>
        </p>
      <div class="row"><h3>New book</h3></div>
      <div class="row">
      <%= form_with model: book do |f| %>
        <p>Title</p>
          <%= f.text_field :title, size: 40 %>
        <p>Opinion</p>
          <%= f.text_area :body, cols: 42 %>
        <br>
        <%= f.submit "Create Book", class: 'btn btn-success' %>
      <% end %>
      </div>
  </div>